							first := info 
						else 
							info.next := last.next
							last.next := info 
						end  
					end 
					i := WinApi.FindNextFileW(find, fd) 
				until i = 0 
				res := WinApi.GetLastError()
				i := WinApi.FindClose(find) 
			else 
				res := WinApi.GetLastError() 
			end 
			if res = noMoreFilesErr then
				res := ok 
			end 
			firstRes := res
			// check startup directory
			if (loc.rootLen > 0) & ((res = ok) or (res = fileNotFoundErr) or (res = pathNotFoundErr)) then
