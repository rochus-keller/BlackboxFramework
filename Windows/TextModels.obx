	proc (c: StdContext) Pos(): integer
		var 
			t: StdModel
			u, r, w: Run
			pos: integer
	begin 
		t := c.text
		r := c.ref
		if t.pc.prev.next # r then
			u := t.trailer.next
			w := t.trailer
			pos := 0
			while (u # r) & (u # w) do 
				inc(pos, u.len_)
				u := u.next 
			end 
			assert(u = r, 20)
			t.pc.prev := r.prev
			t.pc.org := pos 
		end 
		return t.pc.org
	end Pos
	
