	// Prop
	
	proc (p: Prop) IntersectWith*(q: Properties.Property; var equal: boolean)
		var 
			valid: set
	begin 
		with q: Prop do 
			valid := p.valid * q.valid
			equal := true
			if p.offset # q.offset then
				excl(valid, offset) 
			end 
			if p.code # q.code then
				excl(valid, code) 
			end 
			if p.valid # valid then
				p.valid := valid
				equal := false 
			end  
		end 
	end IntersectWith
	
	
