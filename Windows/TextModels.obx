	proc (d: Directory) NewFromString*(s: array of char): Model // new extensible
		var 
			m: Model
			w: Writer
			i: integer
	begin 
		m := d.New()
		w := m.NewWriter(nil)
		i := 0
		while s[i] # 0x do 
			w.WriteChar(s[i])
			inc(i) 
		end 
		return m
	end NewFromString
	
