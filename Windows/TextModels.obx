	(* text file format:
	   
	   text = 0					  CHAR
	   textoffset			INTEGER (> 0)
	   { run }
	   -1					CHAR
	   { char }
	   
	   run = attrno				 BYTE (0..32)
	   [ attr ]			    attr.Internalize
	   ( piece | lpiece | viewref )
	   
	   piece = length			   INTEGER (> 0)
	   
	   lpiece = -length		     INTEGER (< 0, length MOD 2 = 0)
	   
	   viewref = 0				   INTEGER
	   w					  INTEGER
	   h					   INTEGER
	   view				   view.Internalize *)
	
	
