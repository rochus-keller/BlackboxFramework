		var focus: Views.View) 
	begin 
		if ~c.disabled & ~c.readOnly then
			with f: StdCFrames.Frame do 
				with msg: Controllers.EditMsg do 
					if (msg.op = Controllers.pasteChar) 
						& ((msg.char_ = " ") or IsShortcut(msg.char_, c)) then
