		var 
			c: RadioButton
			old: integer
	begin 
		if x then
			c := f.view(RadioButton)
			if c.item.Valid() & ~c.readOnly then
				if c.item.typ = Meta.boolTyp then
					if c.item.BoolVal() then
						old := 1 
					else 
