					if c.prop.level # old then
						c.item.PutBoolVal(c.prop.level # 0)
						Notify(c, f, Dialog.changed, old, c.prop.level) 
					end  
				else 
					old := c.item.IntVal()
					if c.prop.level # old then
						c.item.PutIntVal(c.prop.level)
						Notify(c, f, Dialog.changed, old, c.prop.level) 
					end  
				end  
